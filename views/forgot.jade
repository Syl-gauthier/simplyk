block vars

block content
  #map-section.container-fluid
    .row
      .col-md-6.col-md-offset-3
        form#registerform(action="/forgot", method="post", role='form')
          .input-group.conn-input
            span#basic-addon1.input-group-addon Adresse mail
            input#mail.form-control(type='email', placeholder='Ex: contact@simplyk.org', name='email', aria-describedby='basic-addon1', required)
            input(type='submit',tabindex='-1', form='form', value='Send reset password email')
                            
