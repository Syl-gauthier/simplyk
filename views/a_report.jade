                                else if ext.status == 'denied'
                                  span.badge(style='background-color: #E33831')= 'À corriger par l\'élève'
                                else
                                  span.badge(style='background-color: #E33831')= 'Indéfini'
                                if (ext.hours_pending > 0 || ext.hours_done > 0)
                                  if (ext.hours_pending > 0)
