                            if ((ext.status == 'confirmed') || (ext.status == 'corrected') || (ext.status == 'validated') || (ext.status == 'denied'))
                              .btn-group(role='group')
                                div.btn.btn-default.validate(vol=volunteer._id, id=ext._id, type='extras')
