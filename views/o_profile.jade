      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-82053185-2', 'auto');
      ga('send', 'pageview');
  script(src='/javascripts/edit-password.js')
  script(src='/bower_components/bootstrap3-dialog/dist/js/bootstrap-dialog.js')
  script(type='text/javascript').
    $(document).ready(function(){
      "use strict";
      $('.edit-form').submit(function(event){
        console.log('Submit an edit-form');
        console.log('$(this).attr("id) : ' + $(this).attr('id'))
        event.preventDefault();
        var form = $(this); 
        const form_datas = $(this).serializeArray();
        let datas = {};
        let string_success = "";
        let new_data_key = "";
        let class_to_modify = "";
        const modal = $(this).closest('.modal');
        if ($(this).attr('id') == 'email-edit-form'){
          $.ajax({
            type: 'POST',
            url: 'register_check', 
            data: form.serialize(),
            success: onSuccess
          });
          function onSuccess(response) {
            if(response.exists) {
              console.log('Email already exists'); 
              $('#edit-alert-danger').removeClass('hidden');
              $('#edit-alert-danger').html('Cet adresse email est déjà attribuée ! ');
              window.scrollTo(0,0);
              modal.modal('toggle');
            }
            else{
              console.log('The edit-form submit is an email one');
              datas.email = form_datas[0].value;
              $.post('/edit-profile', datas)
              .done(function(data){
                modal.modal('toggle');
                $('#edit-alert-success').removeClass('hidden');
                $('#edit-alert-success').html(' Adresse email modifié avec succès pour : ' + data.newEmail);
                $('.email').html('' + data.newEmail);
              })
              .fail(function(data){
                modal.modal('toggle');
                $('#edit-alert-danger').removeClass('hidden');
                $('#edit-alert-danger').html(' ' + data.responseJSON.error);
                console.log(data.error);
              });
            }
          }
        } else{
          if ($(this).attr('id') == 'phone-edit-form'){
            console.log('The edit-form submit is a phone one');
            datas.phone = form_datas[0].value;
            string_success = ' Numéro de téléphone modifié avec succès pour : ';
            new_data_key = "newPhone";
            class_to_modify = '.phone';
          } else if ($(this).attr('id') == 'cause-edit-form'){
            console.log('The edit-form submit is a cause one');
            datas.cause = form_datas[0].value;
            string_success = ' Cause modifiée avec succès pour : ';
            new_data_key = "newCause";
            class_to_modify = '.cause';
          } else if ($(this).attr('id') == 'website-edit-form'){
            console.log('The edit-form submit is a website one');
            datas.website = form_datas[0].value;
            string_success = ' Site web modifié avec succès pour : ';
            new_data_key = "newWebsite";
            class_to_modify = '.website';
          } else if ($(this).attr('id') == 'description-edit-form'){
            console.log('The edit-form submit is a description one');
            datas.description = form_datas[0].value;
            string_success = ' Description modifiée avec succès pour : ';
            new_data_key = "newDescription";
            class_to_modify = '.description';
          } else if ($(this).attr('id') == 'name-edit-form'){
            console.log('The edit-form submit is a name one');
            datas.firstname = form_datas[0].value;
            datas.lastname = form_datas[1].value;
            string_success = ' Nom du responsable modifiée avec succès pour : ';
            new_data_key = "newName";
            class_to_modify = '.name';
          } else if ($(this).attr('id') == 'org_name-edit-form'){
            console.log('The edit-form submit is a org_name one');
            console.log('form_datas : ' + JSON.stringify(form_datas));
            datas.org_name = form_datas[0].value;
            string_success = ' Nom de l\'organisme modifiée avec succès pour : ';
            new_data_key = "newOrgName";
            class_to_modify = '.org_name';
          };
          $.post('/edit-profile', datas)
            .done(function(data){
              modal.modal('toggle');
              $('#edit-alert-success').removeClass('hidden');
              $('#edit-alert-success').html(string_success + data[new_data_key]);
              $(class_to_modify).html('' + data[new_data_key]);
            })
            .fail(function(data){
              modal.modal('toggle');
              $('#edit-alert-danger').removeClass('hidden');
              $('#edit-alert-danger').html(' ' + data.responseJSON.error);
              console.log(data.error);
            });
        }
      });
    });