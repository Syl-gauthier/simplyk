extends ./g_layout.jade
block vars
  - var page = 'profile'

block head
  title Profil organisme
  meta(name='description', content='Gère tes informations d\'organisme')
block content
      .container-fluid
        .row
          .col-md-offset-3
            h2.pull-left Profil de l'organisme
        .row
          .col-md-6.col-md-offset-3
            .media
              .media-left.media-middle
                img.media-object.img-profile(src='/images/rocket.png')
              .media-body.media-middle
                  h4.media-heading.org_name.inline= organism.org_name
                  a.inline.btn(data-toggle='modal' data-target='#org_name_edit_modal')
                    i.fa.fa-pencil
                  .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='org_name_edit_modal')
                    div.modal-dialog(role='document')
                      .modal-content
                        form.edit-form#org_name-edit-form
                          .modal-header
                            button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                              span(aria-hidden='true')
                              h4.modal-title Édition de mon nom d'organisme
                          div.modal-body
                              label(for='org_name') Nouveau nom d'organisme
                              input.form-control(type='text', name='org_name', aria-describedby='basic-addon1' required) 
                          .modal-footer
                            input.btn.btn-warning(type='submit', form='org_name-edit-form', value='Valider')
                            a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item(style='margin-bottom: 60px')
                  a(href='http://www.'+organism.website)= organism.website
                  h4
                    i.fa.fa-phone
                    p.inline.phone #{organism.phone}
                  h4
                    i.fa.fa-envelope
                    p.inline #{organism.email}
                  br
        .row
          .col-md-6.col-md-offset-3
            p#edit-alert-danger.alert.alert-danger.hidden
            p#edit-alert-success.alert.alert-success.hidden
            ul.list-group
              li.list-group-item
                h5.text-center
                  i.inline.fa.fa-align-left(aria-hidden="true") 
                  p.inline.description <b>Mission :</b> #{organism.description}
                  a.inline.btn(data-toggle='modal' data-target='#description_edit_modal')
                      i.fa.fa-pencil
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='description_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#description-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition de ma mission
                      div.modal-body
                          label(for='description') Nouvelle mission
                          textarea.form-control(type='text', name='description', aria-describedby='basic-addon1',rows="3",maxlength="300",required) 
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='description-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item
                h5.text-center
                  i.inline.fa.fa-user-circle(aria-hidden="true") 
                  p.inline.name #{organism.firstname} #{organism.lastname}
                  a.inline.btn(data-toggle='modal' data-target='#name_edit_modal')
                      i.fa.fa-pencil
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='name_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#name-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition du nom du responsable
                      div.modal-body
                          label(for='firstname') Prénom du responsable
                          input.form-control(type='text', name='firstname', aria-describedby='basic-addon1' required) 
                          label(for='lastname') Nom du responsable
                          input.form-control(type='text', name='lastname', aria-describedby='basic-addon1' required) 
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='name-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item
                h5.text-center
                  i.inline.fa.fa-heart(aria-hidden="true") 
                  p.inline.cause <b>Cause :</b> #{organism.cause}
                  a.inline.btn(data-toggle='modal' data-target='#cause_edit_modal')
                      i.fa.fa-pencil
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='cause_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#cause-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition de ma cause
                      div.modal-body
                          label(for='cause') Nouvelle cause
                          select#cause.form-control(placeholder='', name='cause', aria-describedby='basic-addon1')
                            option Nature
                            option Solidarité
                            option Sport et Culture
                            option Enfance
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='cause-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              if organism.phone
                li.list-group-item
                  h5.text-center
                    i.inline.fa.fa-mobile(aria-hidden="true") 
                    p.inline.phone #{organism.phone}
                    a.inline.btn(data-toggle='modal' data-target='#phone_edit_modal')
                      i.fa.fa-pencil
              else
                li.list-group-item
                  h5.text-center
                    i.inline.fa.fa-mobile(aria-hidden="true") 
                    p.inline.phone Ajouter mon numéro de téléphone
                    a.inline.btn(data-toggle='modal' data-target='#phone_edit_modal')
                      i.fa.fa-plus
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='phone_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#phone-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition de mon numéro de téléphone
                      div.modal-body
                          label(for='phone') Nouveau numéro de téléphone
                          input.form-control(type='text', name='phone')
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='phone-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item
                h5.text-center
                  i.inline.fa.fa-at(aria-hidden="true") 
                  p.inline.email #{organism.email}
                  a.inline.btn(data-toggle='modal' data-target='#email_edit_modal')
                    i.fa.fa-pencil
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='email_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#email-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition de mon adresse email
                      div.modal-body
                          label(for='email') Nouvelle adresse email
                          input.form-control(type='email', name='email')
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='email-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item
                h5.text-center
                  i.inline.fa.fa-globe(aria-hidden="true") 
                  p.inline.website #{organism.website}
                  a.inline.btn(data-toggle='modal' data-target='#website_edit_modal')
                      i.fa.fa-pencil
              .modal.fade(tabindex='-1', role='dialog' aria-labelledby="extraModalLabel", id='website_edit_modal')
                div.modal-dialog(role='document')
                  .modal-content
                    form.edit-form#website-edit-form
                      .modal-header
                        button(type='button' class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden='true')
                          h4.modal-title Édition de mon site web
                      div.modal-body
                          label(for='website') Nouveau site web
                          input.form-control(type='text', name='website', aria-describedby='basic-addon1' required) 
                      .modal-footer
                        input.btn.btn-warning(type='submit', form='website-edit-form', value='Valider')
                        a.btn.btn-default(data-dismiss='modal') Fermer
              li.list-group-item#password-group(style='margin-bottom: 60px')
                h5.text-center
                  i.inline.fa.fa-key(aria-hidden="true")
                  p.inline Mot de passe: #[span.display ******]
                  a.inline.btn#edit-password-button.display
                    i.fa.fa-pencil
                  form#edit-password-form.form-horizontal.hidden.editing
                    .input-group.conn-input
                      p#password-error.alert.alert-danger.hidden Mot de passe incorrect
                      .input-group.conn-input
                        input.form-control(name="current-password", type="password", placeholder="Mot de passe actuel")
                      .input-group.conn-input
                        input.form-control(name="new-password", type="password", placeholder="Nouveau mot de passe")
                      .input-group.conn-input
                        input.form-control(name="confirm-password", type="password", placeholder="Confirmer mot de passe")
                  div.btn-toolbar
                      div.btn.btn-default#cancel-password-button.editing.hidden Annuler
                      div.btn.btn-default#save-password-button.editing.hidden Enregistrer

