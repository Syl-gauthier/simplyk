		//- new google.maps.LatLng(45.25,-74.26));

		var options = {
		types: ['address'],
		componentRestrictions: {country: 'ca'}
		};
		function initAutocomplete(){
			input = (document.getElementById('address'));
			console.log(input);
			var autocomplete = new google.maps.places.Autocomplete(input,options);
