      if user
        unless page=='profile'
          li.navbar-link(role='presentation')
            a(href='profile') Mon profil
        unless page=='dashboard'
          li.navbar-link(role='presentation')
            a(href='dashboard') Tableau de Bord
        li(role='presentation')
          form.navbar-form( method='post', action='logout')
            button.btn.btn-success-outline.pinkow(type='submit') DÃ©connexion
